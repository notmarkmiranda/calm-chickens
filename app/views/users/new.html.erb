<div class="columns mt-4">
  <div class="column is-one-third is-offset-one-third">
    <h2 class="title">Sign Up or Sign In</h2>
    <%= form_with model: @user, url: sign_up_or_in_path do |f| %>
      <div class="field">
        <%= f.label :email, class: "label" %>
        <div class="control">
          <%= f.text_field :email, class: "input" %>
        </div>
      </div>
      <div class="field">
        <%= f.label :password, class: "label" %>
        <div class="control">
          <%= f.password_field :password, class: "input" %>
        </div>
      </div>
      <div class="control">
        <%= f.submit "Let's Go!", class: "button is-primary is-outlined is-fullwidth" %>
      </div>
    <% end %>
  </div>
</div>